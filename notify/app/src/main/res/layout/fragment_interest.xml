<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@drawable/white"
            android:layout_marginTop="22dp"
            android:layout_marginHorizontal="25dp">

            <TextView
                android:id="@+id/tv_interest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兴趣助手"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="11dp"/>

            <View
                android:id="@+id/v_1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#EFD8D8"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="15dp"
                android:layout_below="@+id/tv_interest"/>

            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/v_1"
                android:orientation="horizontal"
                android:layout_marginTop="9dp"
                android:layout_marginHorizontal="15dp">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="财经"
                    android:layout_weight="1"
                    android:buttonTint="#109ED5"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="教育"
                    android:layout_weight="1"
                    android:buttonTint="#109ED5"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="房产"
                    android:layout_weight="1"
                    android:buttonTint="#109ED5"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星座"
                    android:layout_weight="1"
                    android:buttonTint="#109ED5"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_1"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="科技"
                    android:layout_weight="1"
                    android:buttonTint="#109ED5"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时尚"
                    android:layout_weight="1"
                    android:buttonTint="#109ED5"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="彩票"
                    android:layout_weight="1"
                    android:buttonTint="#109ED5"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="体育"
                    android:layout_weight="1"
                    android:buttonTint="#109ED5"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_2"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游戏"
                    android:layout_weight="1"
                    android:buttonTint="#109ED5"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时政"
                    android:layout_weight="1"
                    android:buttonTint="#109ED5"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="股票"
                    android:layout_weight="1"
                    android:buttonTint="#109ED5"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="娱乐"
                    android:layout_weight="1"
                    android:buttonTint="#109ED5"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_3"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="社会"
                    android:layout_weight="1"
                    android:buttonTint="#109ED5"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="家居"
                    android:layout_weight="1"
                    android:buttonTint="#109ED5"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_2"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:background="@drawable/white"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="25dp"
            android:layout_below="@+id/rl_1">

            <TextView
                android:id="@+id/tv_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的规则"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="11dp"/>

            <View
                android:id="@+id/v_2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#EFD8D8"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="15dp"
                android:layout_below="@+id/tv_rule"/>

            <cn.enjoytoday.shadow.ShadowLayout
                android:id="@+id/shadowlayout"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_below="@+id/v_2"
                android:layout_marginTop="20dp"
                app:shadowRadius="10dp"
                app:shadowColor="#A3A4A5"
                app:blurRadius="2dp"
                app:xOffset="3dp"
                app:yOffset="3dp"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="25dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/white_r">

                    <TextView
                        android:id="@+id/tv_storage_name"
                        android:layout_width="150dp"
                        android:layout_height="25dp"
                        android:maxLines="1"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"/>

                    <Switch
                        android:id="@+id/switch1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"/>

                </RelativeLayout>

            </cn.enjoytoday.shadow.ShadowLayout>





        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_cloud"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="405dp"
            android:background="@drawable/white"
            android:layout_below="@id/rl_2"
            android:layout_marginVertical="25dp"
            android:layout_marginHorizontal="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_cloud_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="规则榜单"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="11dp"/>

            <View
                android:id="@+id/v_3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#EFD8D8"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="15dp"
                android:layout_below="@+id/tv_cloud_rule"/>

            <RelativeLayout
                android:id="@+id/rl_p1"
                android:layout_width="wrap_content"
                android:layout_height="115dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/iv_p1"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/p1"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/tv_p1"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/iv_p1"
                    android:gravity="center"
                    android:textStyle="bold|italic"
                    android:textColor="#4A4040"
                    android:maxLines="1"
                    android:layout_centerHorizontal="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/tv_p1">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/fork2"/>
                    <TextView
                        android:id="@+id/tv_p1_fork"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        android:text="123"
                        android:textColor="#554A4A"/>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/rl_p2"
                    android:layout_width="75dp"
                    android:layout_height="125dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_p2"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal="true"/>

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/p2" />
                    <TextView
                        android:id="@+id/tv_p2"
                        android:layout_width="120dp"
                        android:layout_height="25dp"
                        android:layout_below="@id/iv_p2"
                        android:gravity="center"
                        android:textStyle="bold|italic"
                        android:textColor="#4A4040"
                        android:maxLines="1"
                        android:layout_centerHorizontal="true"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/tv_p2">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@drawable/fork2"/>
                        <TextView
                            android:id="@+id/tv_p2_fork"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:textSize="12sp"
                            android:layout_marginLeft="5dp"
                            android:text="123"
                            android:textColor="#554A4A"/>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_p3"
                    android:layout_width="75dp"
                    android:layout_height="125dp"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/iv_p3"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal="true"/>

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/p2" />
                    <TextView
                        android:id="@+id/tv_p3"
                        android:layout_width="120dp"
                        android:layout_height="25dp"
                        android:layout_below="@id/iv_p3"
                        android:gravity="center"
                        android:textStyle="bold|italic"
                        android:textColor="#4A4040"
                        android:maxLines="1"
                        android:layout_centerHorizontal="true"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/tv_p3">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@drawable/fork2"/>
                        <TextView
                            android:id="@+id/tv_p3_fork"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:textSize="12sp"
                            android:layout_marginLeft="5dp"
                            android:text="123"
                            android:textColor="#554A4A"/>
                    </LinearLayout>
                </RelativeLayout>
                
            </LinearLayout>
            
            <RelativeLayout
                android:id="@+id/rl_p4"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/white_r"
                android:layout_marginHorizontal="15dp"
                android:clickable="true"
                android:foreground="?selectableItemBackground">
                <TextView
                    android:id="@+id/tv_p4"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold|italic"
                    android:maxLines="1"
                    android:textColor="#4A4040"
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/fork"
                    android:layout_toLeftOf="@id/tv_p4_fork"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tv_p4_fork"
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_p5"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/white_r"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="9dp"
                android:clickable="true"
                android:foreground="?selectableItemBackground">
                <TextView
                    android:id="@+id/tv_p5"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold|italic"
                    android:maxLines="1"
                    android:textColor="#4A4040"
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/fork"
                    android:layout_toLeftOf="@id/tv_p5_fork"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tv_p5_fork"
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>




        </LinearLayout>

    </RelativeLayout>



</ScrollView>