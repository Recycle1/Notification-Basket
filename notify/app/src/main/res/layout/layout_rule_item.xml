<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="25dp"
    android:background="@drawable/white_r">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="规则"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginVertical="3dp"
        android:layout_marginLeft="12dp"/>

    <View
        android:id="@+id/v_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ECE2E2"
        android:layout_below="@id/tv_title"
        android:layout_marginHorizontal="12dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/v_1">
        <TextView
            android:id="@+id/tv_app"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_marginLeft="12dp"
            android:textColor="#635555"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_keyword"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/tv_app" />

        <TextView
            android:id="@+id/tv_action"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/tv_keyword"
            android:layout_centerVertical="true"/>



        <Button
            android:id="@+id/btn_update"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/update_rule"
            android:layout_toLeftOf="@id/btn_delete"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/delete_rule"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"/>
    </RelativeLayout>






</RelativeLayout>